# 이산수학? 경우의 수 공부가 필요함
import java.io.*;
import java.util.Scanner;

class Main {
	public static void main(String[] args) throws Exception {
		Scanner input = new Scanner(System.in);

		int n = input.nextInt();

		int one = n % 3;
		int thr = n / 3;

		int sum = 1;

		int a = 1000000007;
		
		if(one == 0)
			sum--;

		while (thr > 0) {
			sum = sum + one + thr;
			sum = sum % a;
			thr--;
			one += 3;
		}

		System.out.println(sum);
	}
}
